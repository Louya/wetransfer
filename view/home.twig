{# indique la dépendance au template #}
{% extends "template_front.twig" %}


{# block login sur la section upload #}
{% block connexion%}
<a class="log-text p-3" href="login/display">CONNEXION</a>
<a class="log-img p-3" href="login/display">
    <img src="media/user_picture.svg" alt="">
</a>
{% endblock %}


{# block info sur la section upload #}
{% block info %}
<h2>Bienvenue sur</h2>
<p><img class="logo" src="media/ez_transfer.svg" alt="logo complet du site EZ transfer"></p>
<hr></hr>
<p>
    Transférez facilement vos photos et vos fichiers volumineux à vos amis, vos collègues ou votre famille.
<br>
    Profitez d'un service  rapide et sécurisé.
</p>
{% endblock %}

{# affichage du formulaire et de l'upload #}
{% block formulaire %}
<form method="post" action="reception.php" enctype="multipart/form-data">
    <label for="icone">Icône du fichier (JPG, PNG ou GIF | max. 15 Ko) :</label><br />
    <input type="file" name="icone" id="icone" /><br />
    <label for="mon_fichier">Fichier (tous formats | max. 1 Mo) :</label><br />
    <input type="hidden" name="MAX_FILE_SIZE" value="1048576" />
    <input type="file" name="mon_fichier" id="mon_fichier" /><br />
    <label for="titre">Titre du fichier (max. 50 caractères) :</label><br />
    <input type="text" name="titre" value="Titre du fichier" id="titre" /><br />
    <label for="description">Description de votre fichier (max. 255 caractères) :</label><br />
    <textarea name="description" id="description"></textarea><br />
    <input type="submit" name="submit" value="Envoyer" />
</form>


{% endblock %}
